<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#D9EDF7" />
            <stroke
                android:width="1dp"
                android:color="#31A5E7" />
            <corners
                android:radius="30dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            
               
            <gradient
                android:startColor="#31A5E7"
                android:endColor="#31A5E7"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#31A5E7" />
            <corners
                android:radius="30dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>
